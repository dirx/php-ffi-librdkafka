{
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "files": [
          "src/constants.php",
          "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/",
            "RdKafka\\FFIGen\\": "resources/ffigen"
        }
    },
    "require": {
        "php" : "^7.4",
        "ext-ffi": "*",
        "ext-pcntl": "*",
        "beberlei/assert": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "ircmaxell/php-c-parser": "dev-master",
        "symplify/easy-coding-standard": "^7.2",
        "klitsche/ffigen": "^0.3"
    },
    "scripts": {
        "test" : "vendor/bin/phpunit",
        "test-coverage" : "vendor/bin/phpunit --coverage-text --coverage-clover=clover.xml",
        "cs" : "vendor/bin/ecs check src tests examples resources/ffigen --ansi",
        "cs-fix" : "vendor/bin/ecs check src tests examples resources/ffigen --ansi --fix"
    }
}
